<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.apotek.DokterController"
      prefWidth="400" prefHeight="300"
      style="-fx-padding: 20;">
    
    <Label text="Form Input Dokter" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="txtIdDokter" promptText="ID Dokter" maxWidth="300"/>
    <TextField fx:id="txtNamaDokter" promptText="Nama Dokter" maxWidth="300"/>
    <TextField fx:id="txtSpesialis" promptText="Spesialis" maxWidth="300"/>

    <Button text="Simpan" onAction="#simpanDokter" maxWidth="150"/>
</VBox>
