<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.apotek.PasienController">

    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Form Input Pasien" GridPane.columnSpan="2" GridPane.halignment="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Label text="ID Pasien:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtIdPasien" promptText="Contoh: P001" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Nama Pasien:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNamaPasien" promptText="Contoh: Budi Santoso" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Umur:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtUmur" promptText="Contoh: 30" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Alamat:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtAlamat" promptText="Contoh: Jl. Merdeka No.10" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Keluhan:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="txtKeluhan" promptText="Contoh: Pusing, batuk" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Button text="Simpan" onAction="#simpanPasien" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
        </GridPane>
    </center>

</BorderPane>


